<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class = "header">
  <h1>CoffeeRista</h1>
  <h2>We offer you the ultimate taste of coffee!</h2>
  <div class="signup"><%= link_to "Sign up!", signup_path, class: "btn btn-lg btn-primary"%></div>
</div>

<%#= link_to image_tag("coffee.jpg", alt: "coffeerista logo") %>
<% end %>
